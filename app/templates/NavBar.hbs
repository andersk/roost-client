<div class="title-logo">
  <img class="logo" src="img/roost-logo_57x57.png">
  <div class="title"> Roost </div>
</div>

{{#if username}}
  <div class="btn logout">Logout</div>
  <div class="user-info">
    <a class="username" href="settings.html">{{username}}</a>
    <img class="gravatar" src="{{gravatar}}">
  </div>
  <div class="add-pane">
    <i class="fa fa-plus"></i>&nbsp;&nbsp;New Pane
  </div>
  <div class="personal-message">
    <i class="fa fa-envelope-o"></i>&nbsp;&nbsp;Personal Messages
  </div>
{{else}}
  <div class="btn login">Login</div>
{{/if}}