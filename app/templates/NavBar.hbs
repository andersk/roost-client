<div class="title-logo">
  <img class="logo" src="img/roost-logo_57x57.png">
  <div class="title"> Roost </div>
</div>

{{#if username}}
  <div class="btn logout">Logout</div>
  <div class="user-info">
    <a class="username" href="settings.html" tabIndex="-1">
      <span>{{username}}</span> <img class="gravatar" src="{{gravatar}}">
    </a>
  </div>
  <div class="add-pane">
    <i class="fa fa-plus"></i><span>&nbsp;&nbsp;New Pane</span>
  </div>
  <div class="personal-message">
    <i class="fa fa-envelope-o"></i><span>&nbsp;&nbsp;Personal Messages</span>
  </div>
  <div class="toggle-keyboard">
    {{#if keyboard}}
      <i class="fa fa-check-square-o"></i>
    {{else}}
      <i class="fa fa-square-o"></i>
    {{/if}}
    &nbsp;&nbsp;Keyboard
  </div>
  <div class="toggle-panes">
    {{#if panes}}
      <i class="fa fa-check-square-o"></i>
    {{else}}
      <i class="fa fa-square-o"></i>
    {{/if}}
    &nbsp;&nbsp;Panes
  </div>
{{else}}
  <div class="btn login">Login</div>
{{/if}}