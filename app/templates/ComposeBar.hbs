{{#if showCompose}}
  <div class="top-bar">
    <div class="title">
      Compose Message
    </div>
    <div class="close">&times;</div>
  </div>
  <div class="composer">
    <input class="class-input" type="text" placeholder="Class"></input>
    <input class="instance-input" type="text" placeholder="Instance"></input>
    <input class="recipient-input" type="text" placeholder="Recipient"></input>
    <textarea rows="6" placeholder="Type your message here"></textarea>
    <div class="btn send">Send</div>
  </div>
{{else}}
  <div class="single-bar">
    <div class="compose">
      <i class="fa fa-send"></i>&nbsp;&nbsp;Compose Message
    </div>
    <div class="to-bottom">
      <i class="fa fa-chevron-down"></i>&nbsp;&nbsp;Bottom
    </div>
  </div>
{{/if}}